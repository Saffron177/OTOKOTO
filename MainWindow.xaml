<Window x:Class="HottoMotto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HottoMotto"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnStart" Content="録音開始" HorizontalAlignment="Left" Margin="443,152,0,0" VerticalAlignment="Top" Click="btnStart_Click"/>
        <Button x:Name="btnStop" Content="録音停止" HorizontalAlignment="Left" Margin="443,230,0,0" VerticalAlignment="Top" Click="btnStop_Click"/>
        <TextBox x:Name="txtOutput" HorizontalAlignment="Left" Margin="82,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="318" Height="414" VerticalScrollBarVisibility="Auto"/>

        <ComboBox x:Name="ComboBox_AudioDevices" HorizontalAlignment="Left" Margin="405,10,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Button_capture_start" Content="開始" HorizontalAlignment="Left" Margin="405,32,0,0" VerticalAlignment="Top" Click="Button_capture_start_Click"/>
        <Label x:Name="Label_status" Content="録音停止" HorizontalAlignment="Left" Margin="433,32,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Button_capture_stop" Content="停止" HorizontalAlignment="Left" Margin="496,32,0,0" VerticalAlignment="Top" Click="Button_capture_stop_Click"/>
        <ComboBox x:Name="ComboBox_MicDevices" HorizontalAlignment="Left" Margin="530,10,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
