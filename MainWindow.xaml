<Window x:Class="HottoMotto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HottoMotto"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <Style x:Key="CActionButtons" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="50" Background="{TemplateBinding Background}" BorderThickness="1" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="#FFDDDDDD"/>
            <Setter Property="BorderBrush" Value="#FF000000"/>
            <Setter Property="Foreground" Value="#FF000000"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <ListBox x:Name="RealtimeListBox" HorizontalAlignment="Left" Margin="26,52,0,0" VerticalAlignment="Top" Width="549" Height="305" RenderTransformOrigin="0.5,0.5" BorderBrush="#FF0A43ED" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.028"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ListBox.RenderTransform>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" TextWrapping="Wrap" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ComboBox x:Name="ComboBox_AudioDevices" HorizontalAlignment="Left" Margin="663,353,0,0" VerticalAlignment="Top" Width="14" SelectionChanged="ComboBox_AudioDevices_SelectionChanged" Background="White" BorderBrush="{x:Null}"/>
        <Image HorizontalAlignment="Left" Height="32" Margin="631,359,0,0" VerticalAlignment="Top" Width="36" Source="/Resource/speaker.png" Grid.Column="0"/>

        <Button x:Name="Button_capture_start" HorizontalAlignment="Left" Margin="594,22,0,0" VerticalAlignment="Top" Click="Button_capture_start_Click" Style="{StaticResource CActionButtons}" Width="50" Background="#FFFBFAFA" BorderBrush="#FFFBF9F9">
            <StackPanel Orientation="Horizontal">
                <Image Source="Resource/play.png" Width="49" Height="39" RenderTransformOrigin="0.5,0.5"/>
            </StackPanel>
        </Button>

        <Label x:Name="Label_status" Content="録音停止" HorizontalAlignment="Left" Margin="589,72,0,0" VerticalAlignment="Top" Width="64"/>

        <Button x:Name="Button_capture_stop" HorizontalAlignment="Left" Margin="628,185,0,0" VerticalAlignment="Top" Click="Button_capture_stop_Click" Style="{StaticResource CActionButtons}" Background="#FFFBFAFA">
            <StackPanel Orientation="Horizontal">
                <Image Source="Resource/stop.png" Width="29" Height="23" OpacityMask="#FFF6EEEE"/>
            </StackPanel>
        </Button>

        <ComboBox x:Name="ComboBox_MicDevices" HorizontalAlignment="Left" Margin="734,353,0,0" VerticalAlignment="Top" Width="13" BorderBrush="White"/>

        <Button x:Name="Button_Mute" HorizontalAlignment="Left" Margin="684,353,0,0" VerticalAlignment="Top" Click="Button_Mute_Click" Style="{StaticResource CActionButtons}" Background="#FFFBF9F9" BorderBrush="#FFFBF9F9">
            <StackPanel Orientation="Horizontal">
                <Image x:Name="ButtonIcon" Source="Resource/mute.png" Width="33" Height="26"/>
                <TextBlock x:Name="ButtonText"  VerticalAlignment="Center" Margin="5,0,0,0"/>
            </StackPanel>
        </Button>

        <Button HorizontalAlignment="Left" Margin="713,28,0,0" VerticalAlignment="Top" Click="Button_Log_Click" Width="44" Height="28" BorderBrush="{x:Null}" Background="{x:Null}">
            <StackPanel Orientation="Horizontal">
                <Image Source="Resource/log.png" Width="47" Height="21" RenderTransformOrigin="0.5,0.5"/>
            </StackPanel>
        </Button>

        <Button x:Name="Button_Save" HorizontalAlignment="Left" Margin="751,27,0,0" VerticalAlignment="Top" Click="Button_Save_Click" Width="36" BorderBrush="{x:Null}" Background="{x:Null}">
            <StackPanel Orientation="Horizontal">
                <Image Source="Resource/hozon.png" Width="24" Height="24" RenderTransformOrigin="0.5,0.5"/>
            </StackPanel>
        </Button>

    </Grid>
</Window>