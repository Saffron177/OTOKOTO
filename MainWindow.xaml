<Window x:Class="HottoMotto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HottoMotto"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="ComboBox_AudioDevices" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Button_capture_start" Content="開始" HorizontalAlignment="Left" Margin="10,32,0,0" VerticalAlignment="Top" Click="Button_capture_start_Click"/>
        <Label x:Name="Label_status" Content="録音停止" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Button_capture_stop" Content="停止" HorizontalAlignment="Left" Margin="102,32,0,0" VerticalAlignment="Top" Click="Button_capture_stop_Click"/>
    </Grid>
</Window>
