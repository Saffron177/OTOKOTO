<Window x:Class="HottoMotto.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HottoMotto"
        mc:Ignorable="d"
        Title="オトコト" Height="450" Width="800" MinWidth="800" MinHeight="450"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}">
    

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--グリッド0(左側)-->
        <!--ファイル表示用リストボックス-->
        <ListBox x:Name="logList" Margin="20,56,0,20" Grid.Column="0"/>
        <!--ファイル検索用テキストボックス-->
        <TextBox x:Name="search_Textbox" HorizontalAlignment="Left" Height="25" Width="185" Margin="45,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="Search_Textbox_Changed" Grid.Column="0" FontSize="15" CaretBrush="Black" SelectionBrush="{x:Null}" />
        <Image HorizontalAlignment="Left" Height="25" Margin="20,20,0,0" VerticalAlignment="Top" Width="25" Source="/Resource/search.png" Grid.Column="0"/>
        <Border CornerRadius="5" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#434343" Height="25" Width="25" Margin="20,20,0,0" Grid.Column="0">
            <Image Height="25" Width="25" Source="/Resource/search.png" Grid.Column="0"/>
        </Border>

        <!--グリッド1(右側)-->
        <!--ログ表示用リストボックス-->
        <ListBox x:Name="LogListBox" VirtualizingStackPanel.IsVirtualizing="False" Margin="30,55,20,80" Padding="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Grid.Column="1">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border Name="Border" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <!-- フォーカス時の青枠を削除 -->
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{x:Null}" />
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{x:Null}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSpeaker}" Value="False">
                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                        </DataTrigger>
                    </Style.Triggers>
                    
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Click="AudioButtonClick" BorderBrush="{x:Null}" Background="{x:Null}" Width="25" Height="25" Margin="0,0,0,5">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Grid.Column" Value="2"/>
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSpeaker}" Value="True">
                                            <Setter Property="Grid.Column" Value="0"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Image x:Name="AudioButtonImage" Source="Resource/start.png" Width="Auto" Height="Auto"/>
                            <Button.Tag>
                                <Binding ElementName="AudioButtonImage" />
                            </Button.Tag>
                        </Button>
                        <Border CornerRadius="5" Grid.Column="1">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="{x:Null}" />
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource ListBoxItemBackgroundBrush}" />
                                            <Setter Property="Padding" Value="8"/>
                                            <Setter Property="Margin" Value="0,0,0,5"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="{Binding Text}" TextWrapping="Wrap">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <!-- デフォルトのフォントサイズ -->
                                        <Setter Property="FontSize" Value="10" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                                <!-- IsHighlightedがTrueのときフォントサイズを変更 -->
                                                <Setter Property="FontSize" Value="12" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                                <TextBlock.Inlines/>
                            </TextBlock>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <!--ファイル名表示用ラベル-->
        <Label x:Name="file_Title" Grid.Column="1" Content="" HorizontalAlignment="Left" Margin="30,20,0,0" VerticalAlignment="Top"/>
        <!--ログ内容の検索用テキストボックス-->
        <TextBox x:Name="log_Search_Textbox" Grid.Column="1" HorizontalAlignment="Right" Margin="0,20,50,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="150" FontSize="14" Cursor="" CaretBrush="Black" SelectionBrush="{x:Null}" TextChanged="Log_Search_Textbox_Textchanged" KeyDown="log_Search_KeyDown"/>
        <Border CornerRadius="5" Background="#343434" HorizontalAlignment="Right" Height="25" Margin="0,20,200,0" VerticalAlignment="Top" Width="25"  Grid.Column="1">
            <Image  Source="/Resource/search.png" Height="25" Width="25"/>
        </Border>
        <!--コピーボタン-->
        <Button x:Name="Copy_Button" Grid.Column="1" HorizontalAlignment="Right" Margin="0,20,230,0" VerticalAlignment="Top" Click="Copy_Button_Click" Width="25" Height="25" Style="{x:Null}" BorderBrush="{x:Null}" Background="{x:Null}" Visibility="Hidden" ToolTip="コピー" ToolTipService.Placement="Top" ToolTipService.InitialShowDelay="0">
            <Image Source="/Resource/copy.png" Height="Auto" Width="Auto"/>
        </Button>
        <!--マッチ数を表示するラベル-->
        <Label x:Name="SearchId" Grid.Column="1" Content="{Binding Match_Label}" HorizontalAlignment="Right" Margin="0,2,50,0" VerticalAlignment="Top" RenderTransformOrigin="0.525,0.164" Width="150" FontSize="10" Padding="0,6,0,4" Height="25" Grid.IsSharedSizeScope="True" Visibility="Collapsed" FlowDirection="RightToLeft"/>

        <Border x:Name="SoundData" Grid.Column="1" Visibility="Collapsed" Height="60" Width="Auto" VerticalAlignment="Bottom" Margin="30,0,20,10" CornerRadius="10" Background="{DynamicResource SeekBarBackgroundBrush}">
            <StackPanel >
                <Slider x:Name="SeekBar" Minimum="0" Maximum="100" Value="0" Height="20" ValueChanged="SeekBar_ValueChanged" HorizontalAlignment="Center" Foreground="#AAAAAA" VerticalAlignment="Top" Width="400" Margin="0,10,0,0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="25" VerticalAlignment="Bottom">
                    <TextBlock x:Name="CurrentTime" Text="00:00" Margin="5"/>
                    <TextBlock Text="/" Margin="0,4,0,0"/>
                    <TextBlock x:Name="TotalTime" Text="00:00" Margin="5"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
